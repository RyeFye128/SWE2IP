<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewMeta2"
        android:minHeight="275dp"
        android:maxHeight="225dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:paddingBottom="15dp"
        android:paddingTop="50dp"
        android:src="@drawable/holder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/buttonM"
        android:height="62dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_below="@+id/imageViewMeta2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="114dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#003cb3"
        android:layout_marginBottom="12dp"
        android:textColor="#FFC702"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textAllCaps="false"
        android:id="@+id/buttonM2"
        android:height="62dp"
        android:textSize="20dp"
        android:layout_below="@+id/buttonM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#003cb3"
        android:textStyle="bold"
        android:textColor="#FFC702"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is the rock foliated?"
        android:id="@+id/textViewM"
        android:minHeight="120dp"
        android:paddingBottom="5dp"
        android:height = "50dp"
        android:gravity="center"
        android:layout_below="@+id/imageViewMeta2"
        android:layout_alignRight="@+id/imageViewMeta2"
        android:layout_alignEnd="@+id/imageViewMeta2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButtonM"
        android:textAllCaps="false"
        android:minWidth="120dp"
        android:layout_below="@+id/buttonM2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:textColor="#FFC702"
        android:background="#003cb3"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/restartButtonM"
        android:textAllCaps="false"
        android:minWidth="120dp"
        android:textColor="#FFC702"
        android:background="#003cb3"
        android:layout_alignTop="@+id/backButtonM"
        android:layout_alignRight="@+id/buttonM2"
        android:textStyle="bold"
        />

</RelativeLayout>
