<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ryan.geolbuddy" >

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IgneousFlowChart"
            android:label="@string/title_activity_igneous_flow_chart"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ChooseFlowChart"
            android:label="@string/title_activity_choose_flow_chart"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SedFlowChart"
            android:label="@string/title_activity_sed_flow_chart"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MetaFlowChart"
            android:label="@string/title_activity_meta_flow_chart"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
